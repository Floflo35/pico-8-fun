function _update60()
	if (btn(➡️)) p.x+=1
	if (btn(⬅️)) p.x-=1
	if (btn(⬇️)) p.y+=1
	if (btn(⬆️)) p.y-=1
	if (btn(❎)) shoot()
end

function _draw()
	cls(3)
	--hero
	spr(1,p.x,p.y)
	--arrow
	
end
